# Database Configuration
PG_PASS=REPLACE_WITH_YOUR_SECURE_VALUE
PG_USER=authentik
PG_DB=authentik

# Authentik Configuration
AUTHENTIK_SECRET_KEY=REPLACE_WITH_YOUR_SECURE_VALUE
AUTHENTIK_ERROR_REPORTING__ENABLED=true

# SMTP Configuration (optional - configure if you want email functionality)
# AUTHENTIK_EMAIL__HOST=smtp.gmail.com
# AUTHENTIK_EMAIL__PORT=587
# AUTHENTIK_EMAIL__USERNAME=your_email@gmail.com
# AUTHENTIK_EMAIL__PASSWORD=REPLACE_WITH_YOUR_SECURE_VALUE
# AUTHENTIK_EMAIL__USE_TLS=true
# AUTHENTIK_EMAIL__FROM=authentik@yourdomain.com

# Ports
COMPOSE_PORT_HTTP=9000
COMPOSE_PORT_HTTPS=9443

# Docker Image Configuration
AUTHENTIK_IMAGE=ghcr.io/goauthentik/server
AUTHENTIK_TAG=2025.6.4

# Domain for Traefik routing
DOMAIN=snorlax.me

# Redis password for security
REDIS_PASS=REPLACE_WITH_YOUR_SECURE_VALUE
